<% include header.ejs %>
    <div class="main">
        <table id="view" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
            <thead>
                <tr style="color: #59ff7f">
                    <th>STT</th>
                    <th>CODE</th>
                    <th>TÊN SẢN PHẨM</th>
                    <th>THỜI GIAN NHẬP</th>
                    <th>GIÁ NHẬP</th>
                    <th>SỐ LƯỢNG</th>
                    <th>LOẠI SẢN PHẨM</th>
                    <!-- <th>ĐƠN VỊ</th> -->
                    <th>MÔ TẢ:</th>
                    <!-- <th style="display: none">IMAGE</th> -->
                    <th>ID MONGODB: </th>
                </tr>
            </thead>
            <tbody class="list">
                    <% var stt = 0 %>
                    <% array.forEach((i)=>{ %>                    
                    <% stt++ %>
                    <% var d = i.date.getDate() %>
                    <% if(d<10) d="0"+ d %>
                    <% var mo = i.date.getMonth() + 1 %>
                    <% if(mo<10) mo="0"+ mo %>
                    <% var h = i.date.getHours() %>
                    <% if(h<10) h="0"+ h %>
                    <% var m = i.date.getMinutes() %>
                    <% if(m<10) m="0"+ m %>
                    <tr>
                        
                        <td><%= stt %></td>
                        <td id="code"  data-popup-open="popup-1"><%= i.product_code %></td>
                        <td id="name"  style="text-transform: capitalize" data-popup-open="popup-1"><%= i.product_name %></td>
                        <td id="date"  data-popup-open="popup-1"><%= h %>:<%= m %> - <%= d %>/<%= mo%>/<%= i.date.getFullYear() %></td>
                        <!-- <td style="display: none" id="image"><%= i.image %></td> -->
                        <td class="price" id="price"  data-popup-open="popup-1" style="text-align: right"><%= i.price_each %></td>
                        <td id="quantity"  data-popup-open="popup-1" style="text-align: right;padding-right: 33px"><%= i.quantity_in_stock %> <%= i.unit %></td>
                        <td id="cate"  data-popup-open="popup-1"><%= i.category %></td>
                        <!-- <td id="unit"  data-popup-open="popup-1"><%= i.unit %></td> -->
                        <td id="image"  data-popup-open="popup-1"><a target="_blank" href='<%= i.link_image %>'><%= i.link_image %></a></td>
                        <td id="ID"><%= i._id %></td>
                        
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <% include footer.ejs %>