<!doctype html>
<html lang="en">

<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" type="image/x-icon" href="tick.png" />
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="jquery-ui.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="bootstrap.min.css">
</head>

<body>
    <div class="container">
        <nav class="navbar navbar-expand-md navbar-dark bg-dark navbar-fixed-top">
            <button class="navbar-toggler hidden-lg-up" type="button" data-toggle="collapse"></button>
            <div class="collapse navbar-collapse" id="collapsibleNavId">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item" style="border-right: none">
                        <a class="nav-link" target="_blank" href="/add">
                            <i class="fa fa-bolt" aria-hidden="true"></i> NEW PRODUCT</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" target="_blank" href="/">
                            <i class="fa fa-shopping-cart" aria-hidden="true"></i> LIST PRODUCTS</a>
                    </li>
                </ul>

            </div>
        </nav>
        <div class="row content">
            <div class="col-sm-7">
                <div class="main">
                    <form method="POST" enctype="multipart/form-data">
                        <div class="form-group form-inline">
                            <input required type="text" class="form-control" placeholder="product-code" name="code" id="code">
                            <input required type="text" class="form-control" placeholder="product-name" name="name" id="name">
                        </div>
                        <div class="form-group form-inline">
                            <input required type="number" class="form-control" placeholder="quantity" name="quantity">
                            <input required type="text" class="form-control price" placeholder="price" name="price">
                            <span class="input-group-addon">VNĐ</span>
                        </div>
                        <div class="form-group form-inline">
                            <input required type="text" class="form-control" placeholder="unit" name="unit" id="unit">
                            <input required type="text" class="form-control" placeholder="category" name="cate" id="cate">

                        </div>

                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Enter image-link online" id="linkimage" name="image">
                            <div style="margin-top: 16px">
                                <a class="title-upload">OR UPLOAD IMAGE:</a>
                                <input type="file" name="upload" id="upload">
                            </div>
                        </div>
                        <div style="margin-bottom: 0px" class="form-group form-inline">

                            <a type="button" title="LÀM MỚI Ô NHẬP" class="check reset" style="background: #e02424; font-weight: 700">
                                <i class="fa fa-refresh" aria-hidden="true"></i>
                            </a>
                            <a type="button" title="PREVIEW ẢNH TỪ LINK ONLINE" class="check image">CHECK IMAGE</a>
                            <button title="SAVE SẢN PHẨM" type="submit" id="submit" class="btn btn-success">SUBMIT</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-sm-5 sidenav">
                <div class="main">
                    <img id="preview" src="image/placeholder.jpg" width="100%">
                </div>
            </div>
        </div>
    </div>
    <footer class="footer-distributed">

        <div class="footer-right">

            <a href="#" style=" background: #005cbd">
                <i class="fa fa-facebook"></i>
            </a>
            <a href="#" style=" background: #de1c2e">
                <i class="fa fa-google"></i>
            </a>
            <a href="#" style=" background: #1b88fd">
                <i class="fa fa-twitter"></i>
            </a>

        </div>

        <div class="footer-left">

            <p class="footer-links">
                <a href="#">Home</a>
                ·
                <a href="#">Blog</a>
                ·
                <a href="#">Pricing</a>
                ·
                <a href="#">About</a>
                ·
                <a href="#">Faq</a>
                ·
                <a href="#">Contact</a>
            </p>

            <p>TỰ HỌC 247 &copy; 2018</p>
        </div>

    </footer>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="jquery-3.2.1.min.js"></script>
    <script src="jquery.number.js"></script>
    <script src="jquery-ui.js"></script>
    <script src="popper.min.js"></script>
    <script src="bootstrap.min.js"></script>
    <script src="socket.io.js"></script>
    <script src="jquery-add.js"></script>
</body>

</html>